<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", galleries_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_gallery_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Galleries</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.gallery.title", :default => t("activerecord.labels.title", :default => "Title")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @galleries.each do |gallery| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= gallery.id %>
          </td>
                    <td>
            <%= link_to gallery.title, gallery_path(gallery) %>
          </td>
                    <td>
            <%= gallery.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", gallery_path(gallery) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_gallery_path(gallery) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", gallery_path(gallery), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
